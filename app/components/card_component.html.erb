<div class="w-64 h-96 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 flex flex-col">
  <a href="<%= @link %>" class="h-1/2">
    <img 
      src="<%= @image %>" 
      alt="<%= @title %>" 
      class="w-full h-full object-cover rounded-t-lg"
    />
  </a>
  <div class="p-4 h-1/2 flex flex-col justify-between">
    <h5 class="text-lg font-bold text-gray-900 dark:text-white truncate">
      <%= @title %>
    </h5>
    <p class="text-sm text-gray-700 dark:text-gray-400 line-clamp-3">
      <%= @body %>
    </p>
    <%= link_to @link, class: 'mt-auto inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' do %>
      Read more
      <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
      </svg>
    <% end %>
  </div>
</div>
