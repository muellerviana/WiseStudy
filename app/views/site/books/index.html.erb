<div class="px-16 py-4">
  <div class="max-w-52">
    <% @books.each do |book| %>
      <p>Title: <%= book.title %> </p>
      <p>Publisher: <%= book.publisher %></p>
      <p>Publication Year: <%= book.publication_year %> </p>
      <p>ISBN: <%= book.isbn%> </p>
      <p>Summary: <%= book.summary %></p>
      <p>Genre: <%= book.genre %> </p>
      <p>Language: <%= book.language %> </p>
       <% end %>
  </div>
</div>
