<div class="relative text-gray-700  dark:text-gray-100 max-w-[80vw] mx-auto py-8">
  <div class="grid gap-4 w-full h-full items-center grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5">
    <% @authors.each do |author| %>
      <%= render CardComponent.new(
        title: "#{author.name}" + " #{author.last_name}",
        link: site_author_path(author),
        image: author.author_avatar.url || "https://www.strasys.uk/wp-content/uploads/2022/02/Depositphotos_484354208_S.jpg"
      ) %>    
    <% end %>
  </div>
</div>
