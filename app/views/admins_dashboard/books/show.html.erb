<%# Must create a ticket like ItemDisplayComponent for being reusable
when displaying instancies.
 %>
<div class="w-4/5 m-auto">
  <div class="text-gray-950 dark:text-gray-50">
    <h1 class="text-2xl my-4"> Title: <%= @book.title %> </h1>
    <h2 class="text-xl my-4"> Publisher: <%= @book.publisher%></h2>
    <p> Publication year: <%= @book.publication_year %>
    <p> ISBN: <%= @book.isbn %>
    <p> Summary <%= @book.summary %>
    <p> Genre <%= @book.genre %>
    <p> Language: <%= @book.language %>
    <h3 class="text-xl my-3"> Authors: </h3>
    <% @book.authors.each do | author|%>
      <p><%= author.last_name %>,
      <%= author.name %></p>
    <% end %>

  <div class="flex">
        <div class="ml-auto">
          <%= render ButtonComponent.new(text:"Delete this Book",
                                         link: admins_dashboard_book_path,
                                         method: :delete, 
                                         confirm_message: "Confirm message worked") %>
        </div>
      </div>
  </div>
</div>